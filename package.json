    "db:studio": "drizzle-kit studio",
    "db:seed": "tsx app/db/seed.ts",
    "setup": "npm install && npm run db:generate && npm run db:migrate",
    "validate": "npm run lint && npm run typecheck",
    "dev:debug": "cross-env DEBUG=1 npm run dev"
